{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "src/build",
    "rootDir": "src",
    "target": "es2022",
    "module": "es2022",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
